<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<h2><%= @restaurant.phone_number %></h2>
<h2><%= @restaurant.category %></h2>

<h3><%= link_to "Restaurant Index", restaurants_index_path %></h3>
<h3><%= link_to "Edit", edit_restaurant_path %></h3>
<h3><%= link_to "Delete",
  @restaurant,
  method: :delete,
  data: { confirm: 'Are you sure?'}  %></h3>

<h3><%= link_to "Leave comment", new_restaurant_review_path(@restaurant) %></h3>

<h3>Reviews</h3>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.content %>
      <%= review.rating %>
    </li>
  <% end %>
</ul>
